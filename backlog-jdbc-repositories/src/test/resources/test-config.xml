<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource" class="com.sitewidesystems.test.TestJdbcFactory">
        <property name="testDatabaseName" value="backlog-jdbc-tests"/>
        <property name="schemaLocation" value="classpath:/sql/backlog-test-schema.sql"/>
        <property name="testDataLocation" value="classpath:/sql/backlog-db-test-data.sql"/>
    </bean>

    <bean id="badDataSource" class="com.sitewidesystems.test.TestJdbcFactory">
        <property name="testDatabaseName" value="backlog-jdbc-tests"/>
        <property name="schemaLocation" value="classpath:/sql/bad-schema.sql"/>
        <property name="testDataLocation" value="classpath:/sql/bad-data.sql"/>
    </bean>

</beans>